@{
    ViewBag.Title = "Welcome Page";
}
<script src="https://code.jquery.com/jquery-1.10.2.js"></script>

<div class="container">
    <div class="jumbotron" style="text-align:center" title="Welcome page">
        <h3 style="color:white" id="welcomeText">
            <span>I'm Daniel Smith and</span><br />
            <span class="glyphicon glyphicon-hand-right" id="rightHand">
            </span> Welcome to my page!
            <span class="glyphicon glyphicon-hand-left" id="leftHand"></span>
        </h3>
    </div>
</div>

    <div class="container col-lg-8 col-md-10 col-sm-10 col-xs-10">
        <img src="~/Pictures/635494247142165630.jpg" id="homePagePic1" title="Welcome page picture" />
    </div>
    <div class="container">
        <div class="col-lg-4 col-md-7 col-sm-7 col-xs-7">
            <h2 id="hobbies">Hobbies</h2>
            <ul>
                <li>Playing basketball</li>
                <li>Playing xbox one online</li>
                <li>Reading about technology advances</li>
                <li>Spending time with my family</li>
                <li>Dirtbike trail riding</li>
            </ul>
        </div>

        <div class="col-lg-4 col-md-5 col-sm-5 col-xs-5">
            <h2 id="sports">Sports</h2>
            <ul>
                <li>Carolina Panthers</li>
                <li>Kobe Bryant - Lakers</li>
                <li>Charlotte Hornets</li>
            </ul>
        </div>
        <div class="col-lg-4 col-md-5 col-sm-5 col-xs-5">
            <h2 id="career">Career Status</h2>
            <ul>
                <li><b>Currently:</b> I'm working as a software qa analyst.</li>
            </ul>
            <h5>Previous titles</h5>
            <ul>
                <li>Senior help desk analyst</li>
                <li> Help desk/Computer Operator</li>
                <li>Web Content Migration Specialist:</li>
                <li>Help desk/Computer Tech</li>
                <li>Work study: Math tutor</li>
            </ul>
        </div>
        <span class="label label-info" id="lblResume">Resume can be found on contact page!</span>
    </div>
    <div class="container" style="padding-top: 2em">
        <div class="btn-group">
            <button type="button" class="btn btn-default" id="showBtn" title="show video and images">Show</button>
            <button type="button" class="btn btn-default" id="hideBtn" title="hide video and images">Hide</button>
        </div>
    </div>
    <div class="container" style="padding-top: 2em">
        <div class="row col-lg-5 col-md-8 col-sm-8 col-xs-8" id="video2k1">
            <h3>Gaming video</h3>
            <span id="text2k">Me playing 2k16 on the xbox one.</span>
            <video controls="controls" width="450" height="275" title="nba 2k16">
                <source src="~/Videos/NBA%202K16.mp4" type="video/mp4" />
            </video>
            <span>Video provided by: Microsoft Xbox Live stream / 2k sports</span>
            <a href="http://www.xbox.com/en-US/live/">visit xbox live site /</a>
            <a href="http://www.2ksports.com">2k Sports</a>
        </div>
        <div class="row col-lg-4 col-md-6 col-sm-6 col-xs-6" id="lakersLogo" style="padding-left:2em">
            <h3>Sports picture</h3>
            <span id="textLA">Team pictures</span>
            <div id="my-carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#my-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#my-carousel" data-slide-to="1"></li>
                    <li data-target="#my-carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Pictures/lakersLogo.jpg" style="height:280px" />
                        <div class="carousel-caption">
                            <h3 style="color:purple">Lakers Logo</h3>
                            <span class="label label-default">Images provided by: http://hdwallpaperia.com </span>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Pictures/cam-newton-wallpaper-hd1.png" style="height:280px" />
                        <div class="carousel-caption">
                            <h3 style="color:silver">Cam Newton</h3>
                            <span class="label label-default">provided by: https://tpaynesite.wordpress.com/ </span>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Pictures/steveandKobe.jpg" style="height:280px" />
                        <div class="carousel-caption">
                            <h3 style="color: gold">Kobe Bryant</h3>
                            <span class="label label-default">provided by: http://new-hdwallpaperz.blogspot.com/2013/01/kobe-bryant-new-hd-wallpapers.html </span>
                        </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#my-carousel" data-slide="prev" style="left:0px; width:30%">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#my-carousel" data-slide="next" style="right:0px; width:30%">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div>
        </div>
        <div class="row col-lg-3 col-md-6 col-sm-6 col-xs-6" id="testerPic" title="Closer look">
            <h3>Career picture</h3>
            <span id="textTesting">Taking a closer look</span>
            <img src="~/Pictures/testerPic.jpg" width="330" height="280" />
            <span>Image provided by: dreamstime.com</span>
            <a href="http://www.dreamstime.com">Visit site</a>
        </div>
    </div>
    <script src="~/Content/jQuery2_copy.js"></script>
